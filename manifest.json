{
  "manifest_version": 3,
  "name": "Drag and Drop File Upload",
  "version": "1.0",
  "description": "Adds a drag and drop zone for file uploads.",
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": {
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
